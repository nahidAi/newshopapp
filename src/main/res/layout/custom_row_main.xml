<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_main"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="6dp">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/violet1"
        app:mrl_rippleDuration="30">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/pink">


            <FrameLayout
                android:layout_width="95dp"
                android:layout_height="150dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pic_main"
                    android:layout_width="85sp"
                    android:layout_height="85sp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/image_3"
                    app:civ_border_color="@color/violet2"
                    android:layout_marginLeft="8dp"
                    app:civ_border_width="2dp">


                </de.hdodenhof.circleimageview.CircleImageView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/title_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="آماده ی قدم گذاشتن در راه ثروتنمدان هستید؟پس به بخش پولسازی خوش آمدید"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/violet2"
                    android:background="@color/white"/>
            </FrameLayout>


        </LinearLayout>


    </com.balysv.materialripple.MaterialRippleLayout>
</android.support.v7.widget.CardView>